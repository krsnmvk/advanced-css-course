{
  "name": "css-and-sass-course",
  "version": "1.0.0",
  "description": "",
  "private": false,
  "scripts": {
    "watch:natours": "sass 01-natours/sass/main.scss 01-natours/css/style.css -w",
    "migrator:natours": "sass-migrator module division color --migrate-deps 01-natours/sass/main.scss",
    "compile:natours": "sass 01-natours/sass/main.scss 01-natours/css/style.compile.css",
    "concat:natours": "concat -o 01-natours/css/style.concat.css 01-natours/css/style.compile.css 01-natours/css/icon-font.css",
    "prefix:natours": "postcss 01-natours/css/style.concat.css --use autoprefixer -o 01-natours/css/style.prefix.css",
    "compress:natours": "sass 01-natours/css/style.prefix.css 01-natours/css/style.prod.css --style=compressed",
    "build:natours": "npm-run-all migrator:natours compile:natours concat:natours prefix:natours compress:natours",

    "watch:trillo": "sass 02-trillo/sass/main.scss 02-trillo/css/style.css -w",
    "migrator:trillo": "sass-migrator module division color --migrate-deps 02-trillo/sass/main.scss",
    "compile:trillo": "sass 02-trillo/sass/main.scss 02-trillo/css/style.compile.css",
    "prefix:trillo": "postcss 02-trillo/css/style.compile.css --use autoprefixer -o 02-trillo/css/style.prefix.css",
    "compress:trillo": "sass 02-trillo/css/style.prefix.css 02-trillo/css/style.prod.css --style=compressed",
    "build:trillo": "npm-run-all migrator:trillo compile:trillo prefix:trillo compress:trillo",
    
    "watch:nexter": "sass 03-nexter/sass/main.scss 03-nexter/css/style.css -w",
    "migrator:nexter": "sass-migrator module division color --migrate-deps 03-nexter/sass/main.scss",
    "compile:nexter": "sass 03-nexter/sass/main.scss 03-nexter/css/style.compile.css",
    "prefix:nexter": "postcss 03-nexter/css/style.compile.css --use autoprefixer -o 03-nexter/css/style.prefix.css",
    "compress:nexter": "sass 03-nexter/css/style.prefix.css 03-nexter/css/style.prod.css --style=compressed",
    "build:nexter": "npm-run-all migrator:nexter compile:nexter prefix:nexter compress:nexter"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krsnmvk/css-and-sass-course.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/krsnmvk/css-and-sass-course/issues"
  },
  "homepage": "https://github.com/krsnmvk/css-and-sass-course#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "sass": "^1.92.1",
    "sass-migrator": "^2.4.2"
  }
}
